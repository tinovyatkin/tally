{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/extensions/vscode-tally",
        "${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/extensions/vscode-tally/dist/**/*"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/extensions/vscode-tally",
        "--extensionTestsPath=${workspaceFolder}/extensions/vscode-tally/test/suite/index.js",
        "${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/extensions/vscode-tally/dist/**/*"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "preLaunchTask": "${defaultBuildTask}"
    }
  ]
}
